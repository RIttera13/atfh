<div class="modal-body">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

  <h1>New Job</h1>

  <%= form_for @job do |f| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
        <% @job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :job_organization, "Organization:" %>&nbsp;&nbsp;
      <%= f.select :job_organization, @organizations.map(&:organization_name), { :include_blank => '-- Select One --' } %>
    </div>
    </br>
    <div class="field">
      <%= f.label :job_address, "Address:", style:"vertical-align: top" %>&nbsp;&nbsp;
      <%= f.text_area :job_address %>
    </div>
    </br>
    <div class="field">
      <%= f.label :job_date, "Date:" %>&nbsp;&nbsp;
      <%= f.text_field :job_date, class: "date datepicker", id: 'datetimepicker1' %>
    </div>
    </br>
    <div class="field">
      <%= f.label :job_time, "Time:" %>&nbsp;&nbsp;
      <%= f.text_field :job_time, class: "date datepicker", id: 'datetimepicker2' %>
    </div>
    </br>
    <div class="field">
      <%= f.label :job_estimated_hours, "Estimated Hours:" %>&nbsp;&nbsp;
      <%= f.number_field :job_estimated_hours, min: 0, step: 0.1 %>
    </div>
    </br>
    <div class="field">
      <%= f.label :job_sport, "Sport:" %>&nbsp;&nbsp;
      <%= f.select :job_sport, @sports.map(&:sport_name), { :include_blank => '-- Select One --' } %>
    </div>
    </br>
    <div class="field">
      <%= f.label :job_notes, "Notes:", style:"vertical-align: top" %>&nbsp;&nbsp;
      <%= f.text_area :job_notes %>
    </div>
    </br>
    <div class="actions">
      <%= f.submit class: "btn btn-success"%>
    </div>
  <% end %>
</div>
