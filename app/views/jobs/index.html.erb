<div class="content-offset">
  <div class="content">
    <div class="navbar navbar-default">
      <%= form_for_filterrific @filterrific do |f| %>
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "New Job", new_job_path, {:remote => true, 'data-toggle' =>  "modal", class: 'btn btn-success new-btn', style: 'margin-right: 10px', 'data-target' => '#mymodal'} %>
          </li>
          <li class="search-form">
            Location:
            <%= f.select(
              :with_job_locations,
              @filterrific.select_options[:with_job_locations],
              { include_blank: '- Any -' }
            ) %>&nbsp;&nbsp;
          </li>
          <li class="search-form">
            Sport:
            <%= f.select(
              :with_job_sport,
              @filterrific.select_options[:with_job_sport],
              { include_blank: '- Any -' }
            ) %>&nbsp;&nbsp;
          </li>
          <li class="search-form">
            From:
            <%= f.date_field(:with_date_of_gte, :value => 1.month.ago.strftime("%Y-%m-%d")) %>&nbsp;&nbsp;
          </li>
          <li class="search-form">
            To:
            <%= f.date_field(:with_date_of_lt) %>&nbsp;&nbsp;
          </li>

          <li class="search-form">
          <%= link_to('Reset filters', reset_filterrific_url, { :class=>"reset-filter" }) %>
          </li>
          <%= render_filterrific_spinner %>
        </ul>
      <% end %>
      </div>
        <div>
          <%= render(
            partial: 'jobs/list',
            locals: { jobs: @jobs}
          ) %>
        </div>
    </div>
  </div>
</div>
