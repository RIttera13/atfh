$("#datetimepicker1").datetimepicker({
  format: "MM/DD/YYYY h:mm A",
  stepping: 15,
});
$("#datetimepicker2").datetimepicker({
  format: "MM/DD/YYYY h:mm A",
  stepping: 15,
});

var setBind = setInterval(function(){
  getTimeWorked();
}, 2000);

function getTimeWorked() {
  var startTime = $("#datetimepicker1").val();
  var endTime = $("#datetimepicker2").val();

  var time = Date.parse(endTime) - Date.parse(startTime);

  time = time / 1000; //seconds
  time = time / 60; //Minutes
  time = time / 60; //Hours

  if (time >= 0) {
    $("input#hours-worked").val(time.toString());
  }
};
