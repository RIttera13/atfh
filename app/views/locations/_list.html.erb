<div class="fix-table">
  <div id="filterrific_results">
    <div class="text-center scroll staffing-content">
      <table class="table table-fixed table-bordered">
        <thead>
          <tr class='staffing-list-header-font text-center'>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :location_name) %></th>
            <th class="text-center">Address</th>
            <th class="text-center">Edit</th>
            <th class="text-center">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @locations.each do |location| %>
            <tr>
              <td class="col col-md-auto">
                <p class="text-center"><%= location.location_name %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= location.location_street %></p>
                <p class="text-center"><%= location.location_city %>, <%= location.location_state %> <%= location.location_zip %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= link_to "Edit", edit_location_path(location), {:remote => true, 'data-toggle' =>  "modal", class: 'btn btn-success upgrade', style: 'margin-right: 10px', 'data-target' => '#mymodal'} %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= link_to "Delete", location_path(location), method: :delete, class: 'btn btn-danger user-delete', data: { confirm: 'Are you sure you want to Delete this Location?' } %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
