<div class="content-offset">
  <div class="content">
    <div class="text-center scroll staffing-content">
      <table class="table table-fixed table-bordered">
        <thead>
          <tr class='staffing-list-header-font text-center'>
            <th class="text-center">Organization Name</th>
            <th class="text-center">Edit</th>
            <th class="text-center">De-Activate</th>
          </tr>
        </thead>
        <tbody>
          <% @organizations.each do |organization| %>
            <tr>
              <td class="col col-md-auto">
                <p class="text-center"><%= organization.organization_name %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= link_to "Edit", edit_organization_path(organization), class: 'btn btn-success upgrade' %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= link_to "De-Activate", organization_path(organization), method: :delete, class: 'btn btn-danger user-delete', data: { confirm: 'Are you sure you want to De-Activate this Organization?' } %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
