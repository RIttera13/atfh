<div class="fix-table">
  <div id="filterrific_results">
    <div class="text-center scroll staffing-content">
      <table class="table table-fixed table-bordered">

        <thead>
          <tr class='staffing-list-header-font text-center'>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :firstname) %></th>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :lastname) %></th>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :role) %></th>
            <th class="text-center"><%= filterrific_sorting_link(@filterrific, :email) %></th>
            <th class="text-center">Edit User</th>
            <th class="text-center">De-Activate User</th>
          </tr>
        </thead>
        <tbody>
          <% users.each do |user| %>
            <% if user.inactive? %>
              <tr class='staffing-list-font-inactive'>
            <% else %>
              <tr class='staffing-list-font'>
            <% end %>
              <td class="col col-md-auto">
                <p class="text-center"><%= user.firstname %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= user.lastname %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= user.role %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= user.email %></p>
              </td>
              <td class="col col-md-auto">
                <p class="text-center"><%= link_to "Edit", edit_user_path(user), class: 'btn btn-success upgrade' %></p>
              </td>
              <% unless user.inactive? %>
                <td class="col col-md-auto">
                  <p class="text-center"><%= link_to "De-Activate User", user_path(user), method: :delete, class: 'btn btn-danger user-delete', data: { confirm: 'Are you sure you want to De-Activate this user?' } %></p>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= page_entries_info users %>
    <%= will_paginate users, class: 'pull-right'%>
  </div>
</div>
